@model IEnumerable<SysGymT.EntidadesDeNegocio.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Existence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Existence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                <td class="botonestabla">
                        @Html.ActionLink("Modificar", "Edit", new { Id_Products = item.Id_Products}, new { @class = "btn btn-success" })
                </td>
                <td class="botonestabla">
                        @Html.ActionLink("Ver", "Details", new { Id_Products = item.Id_Products }, new { @class = "btn btn-info" })
                </td>
                <td class="botonestabla">
                        @Html.ActionLink("Eliminar", "Delete", new { Id_Products = item.Id_Products }, new { @class = "btn btn-danger" })
                </td>
            </td>
        </tr>
}
    </tbody>
</table>
