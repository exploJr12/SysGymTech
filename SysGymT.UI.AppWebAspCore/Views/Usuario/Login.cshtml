}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="background-container">
        <div class="left-background-login"></div>
        <div class="right-background-login"></div>
    </div>

    <div class="login-container">
        <p></p>
        <p></p>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Login" class="login-form">
                    <input type="hidden" name="pReturnUrl" value="@ViewBag.Url" />

                    <div class="img-container">
                        <img src="~/img/chemsCompressed.jpg" class="imagen" />
                    </div>

                    <div class="input-container1">
                        <input asp-for="Login" id="username" class="form-control centered-input" placeholder="Usuario" />
                    </div>
                    <span asp-validation-for="Login" class="text-danger"></span>

                    <div class="input-container2">
                        <input asp-for="Password" class="form-control" placeholder="Contraseña" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input type="submit" value="Iniciar" class="button-login" />
                    <span class="text-danger">@ViewBag.Error</span>
                </form>
            </div>
        </div>
    </div>
</body>
</html>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}